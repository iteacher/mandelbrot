// tsconfig.json

{
    "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "outDir": "./dist/",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "src/types.d.ts"],
    "exclude": ["node_modules"]
  }